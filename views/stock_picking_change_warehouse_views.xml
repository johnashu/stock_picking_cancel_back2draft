<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="stock_picking_change_warehouse_form" model="ir.ui.view">
        <field name="name">stock.picking.change.warehouse.form</field>
        <field name="model">stock.picking.change.warehouse</field>
        <field name="arch" type="xml">
            <form string="Change Warehouse">
                <field name="company_id" invisible="1" />
                <group>
                    <group>
                        <field name="current_warehouse_id" />
                        <field name="new_warehouse_id" options="{'no_create': True, 'no_edit': True}" />
                    </group>
                    <group>
                        <field name="include_chained_pickings" />
                        <field name="picking_count" />
                    </group>
                </group>
                <group string="Pickings to Update">
                    <field name="chained_picking_ids" nolabel="1" colspan="2">
                        <list>
                            <field name="name" />
                            <field name="picking_type_id" />
                            <field name="location_id" />
                            <field name="location_dest_id" />
                            <field name="state" />
                        </list>
                    </field>
                </group>
                <separator />
                <div class="alert alert-info" role="alert">
                    <strong>Note:</strong> This will update the warehouse, operation type, and locations
                    for all selected pickings. The chain links between Pick and Out operations will be preserved.
                    <br/><br/>
                    <strong>Important:</strong> Pickings must be in 'Draft' or 'Cancelled' state.
                    Use "Cancel &amp; Back to Draft" first if needed.
                </div>
                <footer>
                    <button name="action_change_warehouse"
                            string="Change Warehouse"
                            type="object"
                            class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open wizard -->
    <record id="action_stock_picking_change_warehouse" model="ir.actions.act_window">
        <field name="name">Change Warehouse</field>
        <field name="res_model">stock.picking.change.warehouse</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="stock.model_stock_picking" />
        <field name="binding_view_types">list,form</field>
        <field name="groups_id" eval="[Command.link(ref('stock_picking_cancel_back2draft.group_stock_picking_cancel_back2draft'))]"/>
    </record>
</odoo>
