<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View Button -->
    <record id="view_picking_form_reopen" model="ir.ui.view">
        <field name="name">view_picking_form_reopen</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button
                    name="action_open_change_warehouse_wizard"
                    invisible="state == 'done'"
                    string="Change Warehouse"
                    groups="stock_picking_cancel_back2draft.group_stock_picking_cancel_back2draft"
                    type="object"
                    class="btn-secondary"
                />
            </xpath>
        </field>
    </record>
</odoo>